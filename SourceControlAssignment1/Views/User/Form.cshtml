@model SourceControlAssignment1.Models.User

@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <!--Boostrap CSS file-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <title>Form</title>
</head>
<body>
    <div class="container-fluid bg">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="form-container">
                    @using (Html.BeginForm("Form", "User", FormMethod.Post))
                    {
                        <!--Main Heading-->
                        <div>
                            <p><b>Add Your Details</b></p>
                            <hr style="border:groove" />
                        </div>
                        <!--Name input field-->
                        <div class="form-group">
                            @Html.LabelFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, "", new { @class = "form-control", @placeholder = "Name" })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "badge badge-danger" })

                        </div>
                        <!--User Introduction input field-->
                        <div class="form-group">
                            @Html.LabelFor(m => m.Intro)
                            @Html.TextBoxFor(m => m.Intro, "", new { @class = "form-control", @placeholder = "Intro" })
                            @Html.ValidationMessageFor(m => m.Intro, "", new { @class = "badge badge-danger" })

                        </div>
                        <!--User Email input field-->
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })

                        </div>
                        <!--User confirm email-id field-->
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmEmail)
                            @Html.TextBoxFor(m => m.ConfirmEmail, "", new { @class = "form-control", @placeholder = "ConfirmEmail" })
                            @Html.ValidationMessageFor(m => m.ConfirmEmail, "", new { @class = "badge badge-danger" })

                        </div>

                        <!--User password input field-->
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                        </div>

                        <!--User Experience input field-->
                        <div class="form-group">
                            @Html.LabelFor(m => m.Experience)
                            @Html.TextBoxFor(m => m.Experience, "", new { @class = "form-control", @placeholder = "Experience" })
                            @Html.ValidationMessageFor(m => m.Experience, "", new { @class = "badge badge-danger" })
                        </div>

                        <!--User phone number input field-->
                        <div class="form-group">
                            @Html.LabelFor(m => m.Phone)
                            @Html.TextBoxFor(m => m.Phone, "", new { @class = "form-control", @placeholder = "Phone" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "badge badge-danger" })
                        </div>

                        <!--Submit button-->
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-primary btn-block" value="Submit" />
                        </div>
                    }
                </div>

            </div>


        </div>

        <!--Display entered data if all the data values are valid-->
    </div>
    <h3 style="color:blue">Student Details</h3>
    <h4 style="color:blue">
        <b>
            Name: @ViewBag.Name<br />
            Intro: @ViewBag.Intro<br />
            ConfirmEmail: @ViewBag.ConfirmEmail<br/>
            Experience:@ViewBag.Experience<br/>
            Phone:@ViewBag.Phone<br/>
        </b>
    </h4>
</body>
</html>
